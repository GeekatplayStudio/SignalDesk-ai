{
  "name": "geekatplay-studio",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r --if-present test -- --run && python3 -m unittest discover -s apps/ai-planner/tests -p \"test_*.py\"",
    "compose:isolated:up": "docker compose -f infra/docker-compose.isolated.yml --env-file infra/.env.isolated.example up --build -d",
    "compose:isolated:down": "docker compose -f infra/docker-compose.isolated.yml --env-file infra/.env.isolated.example down",
    "compose:isolated:logs": "docker compose -f infra/docker-compose.isolated.yml --env-file infra/.env.isolated.example logs -f --tail=150",
    "format": "prettier --write .",
    "seed": "pnpm dlx tsx scripts/seed.ts",
    "simulate": "tsx scripts/run-simulation.ts",
    "db:generate": "pnpm --filter @agentops/db prisma generate",
    "db:push": "pnpm --filter @agentops/db prisma db push",
    "db:migrate": "pnpm --filter @agentops/db prisma migrate deploy"
  },
  "devDependencies": {
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.5",
    "@typescript-eslint/parser": "7.18.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2"
  }
}
