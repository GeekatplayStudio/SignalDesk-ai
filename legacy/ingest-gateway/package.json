{
  "name": "mcc-ig",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-Channel Conversation Ingestion Gateway",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "start:worker": "node dist/src/worker/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "load-test": "k6 run scripts/load_test.js",
    "load-test:node": "tsx scripts/load-test.ts",
    "simulate": "tsx scripts/simulate-system.ts",
    "install:web": "npm --prefix \"MCC-IG Console UI Design\" install",
    "dev:web": "npm --prefix \"MCC-IG Console UI Design\" run dev -- --host 0.0.0.0 --port 5173",
    "build:web": "npm --prefix \"MCC-IG Console UI Design\" run build"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "uuid": "^11.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.6",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
